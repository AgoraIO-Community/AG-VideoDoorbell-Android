<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_lock_idle_alarm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/text_view"
        app:layout_constraintLeft_toRightOf="@+id/iv_item" />

    <TextView
        android:id="@+id/tv_dev_detail"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="设备离线"
        app:layout_constraintBottom_toBottomOf="@id/text_view"
        app:layout_constraintLeft_toRightOf="@+id/text_view" />

    <Button
        android:id="@+id/btn_dev_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="..."
        app:layout_constraintBottom_toBottomOf="@id/tv_dev_detail"
        app:layout_constraintLeft_toRightOf="@+id/tv_dev_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>